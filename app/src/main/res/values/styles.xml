<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/playfair_display</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorLightGreen</item>
        <item name="colorAccent">@color/colorCoral</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/MyTitleTextStyle</item>
        <item name="android:logo">@drawable/ic_big</item>

    </style>

    <style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/black</item>
        <item name="fontFamily">@font/playfair_display_italic</item>
        <item name="android:textSize">30dp</item>

    </style>


</resources>
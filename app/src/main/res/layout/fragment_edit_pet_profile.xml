<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="-44dp"
            tools:layout_editor_absoluteY="-16dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorTeal"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="20dp">


            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/edit_profile_image"
                        android:layout_width="148dp"
                        android:layout_height="148dp"
                        android:layout_marginTop="30dp"
                        app:civ_border_color="@color/colorPink" />

                <ImageView
                        android:id="@+id/plus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/edit_profile_image"
                        android:layout_alignTop="@+id/edit_profile_image"
                        android:layout_alignEnd="@+id/edit_profile_image"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="bottom"
                        android:gravity="bottom"
                        android:src="@drawable/ic_plus" />


            </RelativeLayout>

            <EditText
                    android:id="@+id/edit_username"
                    android:layout_width="283dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="64dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/text_input_rounded_corners"
                    android:ems="10"
                    android:hint="Edit pet name"
                    android:inputType="textPersonName"
                    android:paddingLeft="16dp" />

            <EditText
                    android:id="@+id/edit_pet_age"
                    android:layout_width="283dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/text_input_rounded_corners"
                    android:ems="10"
                    android:hint="Age"
                    android:inputType="text"
                    android:paddingLeft="16dp" />

            <EditText
                    android:id="@+id/edit_description"
                    android:layout_width="283dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/text_input_rounded_corners"
                    android:ems="10"
                    android:hint="Edit bio"
                    android:inputType="textMultiLine"
                    android:paddingLeft="16dp"
                    android:paddingTop="10dp" />


            <Spinner
                    android:id="@+id/edit_pet_gender"
                    android:layout_width="283dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/text_input_rounded_corners"
                    android:ems="10"
                    android:paddingLeft="16dp"></Spinner>

            <Spinner
                    android:id="@+id/edit_pet_type"
                    android:layout_width="283dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/text_input_rounded_corners"
                    android:ems="10"
                    android:paddingLeft="16dp"></Spinner>

            <EditText
                    android:id="@+id/edit_breed"
                    android:layout_width="283dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/text_input_rounded_corners"
                    android:ems="10"
                    android:hint="Edit breed"
                    android:inputType="textPersonName"
                    android:paddingLeft="16dp" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="40dp">

                <Button
                        android:id="@+id/button_delete_profile"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_round_red"
                        android:text="Delete Pet" />

                <Button
                        android:id="@+id/button_update_profile"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/btn_rounded_corners"
                        android:text="Update profile" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
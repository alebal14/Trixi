<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"


    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorTeal"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="-41dp">

        <ImageView
            android:id="@+id/register_profile_image"
            android:layout_width="148dp"
            android:layout_height="148dp"

            android:background="@drawable/image_btn_circle"
            tools:srcCompat="@drawable/ic_baseline_person_outline_24" />

        <EditText
            android:id="@+id/register_username"
            android:layout_width="283dp"
            android:layout_height="50dp"
            android:layout_marginTop="64dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/text_input_rounded_corners"
            android:ems="10"
            android:hint="Username"
            android:inputType="textPersonName"
            android:paddingLeft="16dp" />

        <EditText
            android:id="@+id/register_email"
            android:layout_width="283dp"
            android:layout_height="50dp"
            android:ems="10"
            android:layout_marginBottom="20dp"
            android:paddingLeft="16dp"
            android:hint="Email"
            android:background="@drawable/text_input_rounded_corners"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/register_password"
            android:layout_width="283dp"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/text_input_rounded_corners"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="16dp" />

        <Button
            android:id="@+id/button_register"
            android:layout_width="282dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_rounded_corners"
            android:text="Register" />

        <TextView
            android:id="@+id/register_already_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="Already have an account?"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
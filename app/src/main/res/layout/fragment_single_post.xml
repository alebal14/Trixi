<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPink"
    tools:context=".ui.fragments.singlePostFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/single_post_image"
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        android:layout_gravity="center"
                        android:layout_margin="100dp"
                        android:layout_marginTop="20dp"
                        android:elevation="8dp"
                        android:paddingTop="16dp"
                        tools:srcCompat="@tools:sample/avatars">

                    </ImageView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/single_post_title"
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="20dp"
                                android:gravity="center"
                                android:text="TextView"
                                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                                android:textColor="@android:color/black"
                                android:textSize="20sp"
                                tools:text="Title" />

                            <TextView
                                android:id="@+id/single_post_description"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:text="TextView"
                                android:textAlignment="center"
                                android:textColor="#FFFFFF"
                                android:textSize="18sp"
                                app:autoSizeMaxTextSize="100sp"
                                app:autoSizeMinTextSize="10sp"
                                app:autoSizeStepGranularity="1sp"
                                tools:text="Walking out with my dog in a street of LA" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginLeft="30dp"
                            android:orientation="vertical"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp">

                            <ImageButton
                                android:id="@+id/single_post_edit"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginBottom="20dp"
                                android:background="@drawable/ic_baseline_edit_24" />

                           <RelativeLayout
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:background="@null"
                               android:orientation="vertical">
                               <ImageButton
                                   android:id="@+id/single_post_comment"
                                   android:layout_width="50dp"
                                   android:layout_height="50dp"
                                   android:layout_marginBottom="10dp"
                                   android:background="@drawable/ic_baseline_chat_bubble_outline_24" />
                               <TextView
                                   android:id="@+id/comment_count"
                                   android:layout_width="20dp"
                                   android:layout_height="20dp"
                                   android:layout_margin="0dp"
                                   android:background="@drawable/count"
                                   android:padding="3dp"
                                   android:text="50"
                                   android:textColor="#FFFFFF"
                                   android:textSize="9dp"
                                   android:textStyle="bold" />

                           </RelativeLayout>


                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:orientation="vertical">

                                <ImageButton
                                    android:id="@+id/single_post_like"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@drawable/ic_baseline_favorite_border_24" />

                                <TextView
                                    android:id="@+id/like_count"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_margin="0dp"
                                    android:background="@drawable/count"
                                    android:padding="3dp"
                                    android:text="50"
                                    android:textColor="#FFFFFF"
                                    android:textSize="9dp"
                                    android:textStyle="bold" />


                            </RelativeLayout>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </ScrollView>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPink">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/activity_profile_img"
            android:layout_width="45dp"
            android:layout_height="45dp"

            android:layout_marginTop="0dp"
            android:background="@drawable/cirlce_chat">

        </ImageView>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activity_sender_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dummy name"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold">


            </TextView>

            <TextView
                android:id="@+id/activity_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="has liked or commented on your post"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                >

            </TextView>

            <TextView
                android:id="@+id/activity_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="comment sdjf jnfkjs jdfskjdfsk djfks sdfnsk njfnkwj wejkw"
                android:textColor="@color/colorLightGreen"
                android:textSize="15sp"
                android:maxLines="1"
                android:maxLength="100"
                android:paddingBottom="5dp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:visibility="invisible"
                >

            </TextView>
        </LinearLayout>


        <ImageView
            android:id="@+id/activity_postImg"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:srcCompat="@drawable/ic_big" />

        <com.potyvideo.library.AndExoPlayerView
            android:id="@+id/activity_postVideo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:andexo_play_when_ready="false"
            app:andexo_resize_mode="Zoom"
            app:andexo_show_controller="false"
            app:srcCompat="@drawable/ic_big" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>